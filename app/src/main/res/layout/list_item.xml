<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@color/backgroundListColor"
    android:drawSelectorOnTop="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/location_name"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:src="@drawable/baseline_room_black_18dp" />

            <TextView
                android:id="@+id/region"
                style="@style/textAppaernceForListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/baseline_language_black_18dp" />

            <TextView
                android:id="@+id/contact"
                style="@style/textAppaernceForListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/baseline_phone_in_talk_black_18dp" />

            <TextView
                android:id="@+id/postal_code"
                style="@style/textAppaernceForListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_holder" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>